{"ast":null,"code":"import { ref } from 'vue';\nexport default {\n  __name: 'SideBar',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const isExpanded = ref(false);\n    const toggleMenu = () => {\n      isExpanded.value = !isExpanded.value;\n    };\n    const __returned__ = {\n      isExpanded,\n      toggleMenu,\n      ref\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","isExpanded","toggleMenu","value"],"sources":["/home/natan/v/vue-crash/resto-project/src/components/SideBar.vue"],"sourcesContent":["\n<template>\n  <aside :class=\"{ 'is-expanded': isExpanded }\">\n    <div class=\"logo\">\n      <!-- <img :src=\"logoURL\" alt=\"Vue\" /> -->\n    </div>\n\n    <div class=\"menu-toggle-wrap\">\n      <button class=\"menu-toggle\" @click=\"toggleMenu\">\n        <span class=\"material-icons\">keyboard_double_arrow_right</span>\n      </button>\n    </div>\n\n    <h3>Menu</h3>\n    <div class=\"menu\" v-show=\"isExpanded\">\n      <router-link to=\"/\" class=\"button\">\n        <span class=\"material-icons\">home</span>\n        <span class=\"text\">Home</span>\n      </router-link>\n      <router-link to=\"/about\" class=\"button\">\n        <span class=\"material-icons\">description</span>\n        <span class=\"text\">About</span>\n      </router-link>\n      <router-link to=\"/team\" class=\"button\">\n        <span class=\"material-icons\">group</span>\n        <span class=\"text\">Team</span>\n      </router-link>\n      <router-link to=\"/contact\" class=\"button\">\n        <span class=\"material-icons\">email</span>\n        <span class=\"text\">Contact</span>\n      </router-link>\n    </div>\n\n    <div class=\"flex\"></div>\n\n    <div class=\"menu\" v-show=\"isExpanded\">\n      <router-link to=\"/settings\" class=\"button\">\n        <span class=\"material-icons\">settings</span>\n        <span class=\"text\">Settings</span>\n      </router-link>\n    </div>\n  </aside>\n</template>\n\n<script setup>\nimport { ref } from 'vue'\n\nconst isExpanded = ref(false)\n\nconst toggleMenu = () => {\n  isExpanded.value = !isExpanded.value\n}\n</script>\n\n<style scoped>\n/* Import Material Icons font */\n@import url('https://fonts.googleapis.com/icon?family=Material+Icons');\n\n/* Define styles for the aside element */\naside {\n  display: flex;\n  flex-direction: column;\n  background-color: var(--dark);\n  color: var(--light);\n  width: calc(2rem + 32px);\n  overflow: hidden;\n  min-height: 100vh;\n  padding: 1rem;\n  transition: width 0.2s ease-in-out; /* Added transition for width */\n}\n\n/* Define styles for the logo */\n.logo {\n  margin-bottom: 1rem;\n}\n\n.logo img {\n  width: 2rem;\n}\n\n/* Define styles for the menu toggle button */\n.menu-toggle-wrap {\n  display: flex;\n  justify-content: flex-end;\n  margin-bottom: 1rem;\n  position: relative;\n  top: 0;\n  transition: 0.2s ease-in-out;\n}\n\n.menu-toggle-wrap .menu-toggle {\n  transition: 0.2s ease-in-out;\n}\n\n.menu-toggle-wrap .menu-toggle .material-icons {\n  font-size: 2rem;\n  color: var(--light);\n  transition: 0.2s ease-out;\n}\n\n.menu-toggle-wrap .menu-toggle:hover .material-icons {\n  color: var(--primary);\n  transform: translateX(0.5rem);\n}\n\n/* Define styles for the menu heading */\nh3 {\n  color: var(--grey);\n  font-size: 0.875rem;\n  margin-bottom: 0.5rem;\n  text-transform: uppercase;\n}\n\n/* Define styles for the menu items */\n.menu {\n  margin: 0 -1rem;\n}\n\n.menu .button {\n  display: flex;\n  align-items: center;\n  text-decoration: none;\n  transition: 0.2s ease-in-out;\n  padding: 0.5rem 1rem;\n}\n\n.menu .button .material-icons {\n  font-size: 2rem;\n  color: var(--light);\n  transition: 0.2s ease-in-out;\n}\n\n.menu .button .text {\n  color: var(--light);\n  transition: 0.2s ease-in-out;\n}\n\n.menu .button:hover {\n  background-color: var(--dark-alt);\n}\n\n.menu .button:hover .material-icons,\n.menu .button:hover .text {\n  color: var(--primary);\n}\n\n.menu .button.router-link-exact-active {\n  background-color: var(--dark-alt);\n  border-right: 5px solid var(--primary);\n}\n\n.menu .button.router-link-exact-active .material-icons,\n.menu .button.router-link-exact-active .text {\n  color: var(--primary);\n}\n\n/* Define styles for the flex container */\n.flex {\n  flex: 1 1 0%;\n}\n\n/* Define styles for the footer */\n.footer {\n  opacity: 0;\n  transition: opacity 0.3s ease-in-out;\n}\n\n.footer p {\n  font-size: 0.875rem;\n  color: var(--grey);\n}\n\n/* Apply styles when the sidebar is expanded */\n.is-expanded {\n  width: var(--sidebar-width);\n}\n\n.is-expanded .menu-toggle-wrap {\n  top: -3rem;\n}\n\n.is-expanded .menu-toggle-wrap .menu-toggle {\n  transform: rotate(-180deg);\n}\n\n.is-expanded h3,\n.is-expanded .menu {\n  opacity: 1; /* Make the heading and menu visible when expanded */\n}\n\n.is-expanded .button .material-icons {\n  margin-right: 1rem;\n}\n\n.is-expanded .footer {\n  opacity: 0;\n}\n\n/* Define media query for smaller screens */\n@media (max-width: 1024px) {\n  aside {\n    position: absolute;\n    z-index: 99;\n  }\n}\n</style>\n"],"mappings":"AA6CA,SAASA,GAAG,QAAQ,KAAK;;;;;;;IAEzB,MAAMC,UAAU,GAAGD,GAAG,CAAC,KAAK,CAAC;IAE7B,MAAME,UAAU,GAAGA,CAAA,KAAM;MACvBD,UAAU,CAACE,KAAK,GAAG,CAACF,UAAU,CAACE,KAAK;IACtC,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}
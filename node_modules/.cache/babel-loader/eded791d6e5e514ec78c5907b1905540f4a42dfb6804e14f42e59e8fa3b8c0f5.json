xpanded */\n.visible {\n\topacity: 1;\n}\n\n/* Define styles for the menu items */\n.menu {\n\tmargin: 0 -1rem;\n\topacity: 0; /* Initially hidden */\n\ttransition: opacity 0.3s ease-in-out; /* Added transition for opacity */\n}\n\n/* Make the menu items visible when expanded */\n.visible {\n\topacity: 1;\n}\n\n.menu .button {\n\tdisplay: flex;\n\talign-items: center;\n\ttext-decoration: none;\n\ttransition: 0.2s ease-in-out;\n\tpadding: 0.5rem 1rem;\n}\n\n.menu .button .material-icons {\n\tfont-size: 2rem;\n\tcolor: var(--light);\n\ttransition: 0.2s ease-in-out;\n}\n\n.menu .button .text {\n\tcolor: var(--light);\n\ttransition: 0.2s ease-in-out;\n}\n\n.menu .button:hover {\n\tbackground-color: var(--dark-alt);\n}\n\n.menu .button:hover .material-icons,\n.menu .button:hover .text {\n\tcolor: var(--primary);\n}\n\n.menu .button.router-link-exact-active {\n\tbackground-color: var(--dark-alt);\n\tborder-right: 5px solid var(--primary);\n}\n\n.menu .button.router-link-exact-active .material-icons,\n.menu .button.router-link-exact-active .text {\n\tcolor: var(--primary);\n}\n\n/* Define styles for the flex container */\n.flex {\n/* Define styles for the flex container */\nflex: 1 1 0%;\n}\n\n/* Define styles for the footer */\n.footer {\n\topacity: 0;\n\ttransition: opacity 0.3s ease-in-out;\n}\n\n.footer p {\n\tfont-size: 0.875rem;\n\tcolor: var(--grey);\n}\n\n/* Apply styles when the sidebar is expanded */\n.is-expanded {\n\twidth: var(--sidebar-width);\n}\n\n.is-expanded .menu-toggle-wrap {\n\ttop: -3rem;\n}\n\n.is-expanded .menu-toggle-wrap .menu-toggle {\n\ttransform: rotate(-180deg);\n}\n\n.is-expanded h3,\n.is-expanded .menu {\n\topacity: 1; /* Make the heading and menu visible when expanded */\n}\n\n.is-expanded .button .material-icons {\n\tmargin-right: 1rem;\n}\n\n.is-expanded .footer {\n\topacity: 0;\n}\n\n/* Define media query for smaller screens */\n@media (max-width: 1024px) {\n\taside {\n\t\tposition: absolute;\n\t\tz-index: 99;\n\t}\n}\n</style>\n"],"mapp